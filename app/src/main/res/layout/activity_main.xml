<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">

    <android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <include
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/toolbar" />

        <LinearLayout
            android:layout_marginTop="56dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- Header Layout -->
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:background="@drawable/header_bg"
                android:gravity="center_horizontal|center_vertical|center"
                android:orientation="vertical"
                tools:ignore="MissingConstraints">

                <android.support.v7.widget.CardView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:elevation="12dp"
                    android:id="@+id/view2"
                    app:cardCornerRadius="40dp"
                    android:layout_centerHorizontal="true"
                    android:innerRadius="0dp"
                    android:shape="ring"
                    android:thicknessRatio="1.9">

                    <ImageView
                        android:layout_height="80dp"
                        android:layout_width="match_parent"
                        android:id="@+id/imageView1"
                        android:src="@drawable/ic_person"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true">
                    </ImageView>

                </android.support.v7.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FFF"
                    android:textSize="16sp"
                    android:text="Name"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="#FFF"
                    android:text="Email"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="5dp"
                    android:background="#CCC"/>

            </LinearLayout>

            <!-- Icons Layout -->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!-- Icons Layout -->
                <LinearLayout
                    android:id="@+id/iconRow1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <android.support.v7.widget.CardView
                        android:id="@+id/cardCases"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:minHeight="90dp"
                        android:elevation="5dp"

                        app:cardElevation="5dp"
                        app:cardCornerRadius="2dp"
                        android:onClick="openActivity">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal|center_vertical|center"
                            android:padding="5dp"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:layout_marginTop="2dp"
                                android:layout_gravity="center|center_horizontal|center_vertical"
                                android:background="@drawable/ic_cases" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="fill_parent"
                                android:layout_marginTop="2dp"
                                android:layout_gravity="bottom|center_horizontal"
                                android:text="My Cases"
                                android:textSize="15sp"
                                android:gravity="center|bottom|center_horizontal"/>

                        </LinearLayout>


                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:id="@+id/cardProfiles"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:minHeight="90dp"

                        android:elevation="5dp"
                        app:cardElevation="5dp"
                        app:cardCornerRadius="2dp"
                        android:onClick="openActivity">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal|center_vertical|center"
                            android:padding="5dp"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:layout_marginTop="2dp"

                                android:layout_gravity="center|center_horizontal|center_vertical"
                                android:background="@drawable/ic_routine" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="fill_parent"
                                android:layout_marginTop="2dp"
                                android:layout_gravity="bottom|center_horizontal"
                                android:text="Patient Profiles"
                                android:textSize="15sp"
                                android:gravity="center|bottom|center_horizontal"/>

                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:id="@+id/cardMessage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:minHeight="90dp"

                        android:elevation="5dp"
                        app:cardElevation="5dp"
                        app:cardCornerRadius="2dp"
                        android:onClick="openActivity">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal|center_vertical|center"
                            android:padding="5dp"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:layout_marginTop="2dp"
                                android:backgroundTint="@color/apnacareDarkBlue"
                                android:layout_gravity="center|center_horizontal|center_vertical"
                                android:background="@drawable/ic_messages" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="fill_parent"
                                android:layout_marginTop="2dp"
                                android:layout_gravity="bottom|center_horizontal"
                                android:text="Messages"
                                android:textSize="15sp"
                                android:gravity="center|bottom|center_horizontal"/>

                        </LinearLayout>

                    </android.support.v7.widget.CardView>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/iconRow2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iconRow1"
                    android:orientation="horizontal">

                    <android.support.v7.widget.CardView
                        android:id="@+id/cardBills"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:minHeight="90dp"

                        android:elevation="5dp"
                        app:cardElevation="5dp"
                        app:cardCornerRadius="2dp"
                        android:onClick="openActivity">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal|center_vertical|center"
                            android:padding="5dp"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:layout_marginTop="2dp"
                                android:layout_gravity="center|center_horizontal|center_vertical"
                                android:background="@drawable/ic_view_case" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="fill_parent"
                                android:layout_marginTop="2dp"
                                android:layout_gravity="bottom|center_horizontal"
                                android:text="My Bills"
                                android:textSize="15sp"
                                android:gravity="center|bottom|center_horizontal"/>

                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:id="@+id/cardAccount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:minHeight="90dp"
                        android:elevation="5dp"
                        app:cardElevation="5dp"
                        app:cardCornerRadius="2dp"
                        android:onClick="openActivity">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal|center_vertical|center"
                            android:padding="5dp"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:layout_marginTop="2dp"
                                android:layout_gravity="center|center_horizontal|center_vertical"
                                android:background="@drawable/ic_profile" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="fill_parent"
                                android:layout_marginTop="2dp"
                                android:layout_gravity="bottom|center_horizontal"
                                android:text="My Account"
                                android:textSize="15sp"
                                android:gravity="center|bottom|center_horizontal"/>

                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:id="@+id/cardShop"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:minHeight="90dp"
                        android:elevation="5dp"

                        app:cardElevation="5dp"
                        app:cardCornerRadius="2dp"
                        android:onClick="openActivity">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal|center_vertical|center"
                            android:padding="5dp"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:layout_marginTop="2dp"
                                android:layout_gravity="center|center_horizontal|center_vertical"
                                android:background="@drawable/ic_cart" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="fill_parent"
                                android:layout_marginTop="2dp"
                                android:layout_gravity="bottom|center_horizontal"
                                android:text="E-Shop"
                                android:textSize="15sp"
                                android:gravity="center|bottom|center_horizontal"/>

                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </android.support.design.widget.CoordinatorLayout>

    <!--<include layout="@layout/navigation_view"/>-->

</android.support.v4.widget.DrawerLayout>

