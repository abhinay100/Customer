<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="false"
        android:isScrollContainer="false">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                android:id="@+id/assessmentDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_marginTop="5dp"
                            android:minWidth="130dp"
                            android:layout_gravity="left|center_horizontal|center_vertical"
                            android:background="#CCC"
                            android:padding="5dp"
                            android:text="Assessment Date"
                            android:textStyle="bold"
                            android:textSize="15sp"/>

                        <TextView
                            android:id="@+id/assessmentDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="5dp"
                            android:layout_gravity="left|center_horizontal|center_vertical"
                            android:padding="5dp"
                            android:text="-"
                            android:textSize="15sp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_marginTop="5dp"
                            android:minWidth="130dp"
                            android:layout_gravity="left|center_horizontal|center_vertical"
                            android:background="#CCC"
                            android:padding="5dp"
                            android:text="Assessed By"
                            android:textStyle="bold"
                            android:textSize="15sp"/>

                        <TextView
                            android:id="@+id/assessor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="5dp"
                            android:layout_gravity="left|center_horizontal|center_vertical"
                            android:padding="5dp"
                            android:text="-"
                            android:textSize="15sp"/>

                    </LinearLayout>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="left|center_horizontal|center_vertical"
                        android:background="#CCC"
                        android:padding="5dp"
                        android:text="Patient Condition"
                        android:textStyle="bold"
                        android:textSize="15sp"/>

                    <TextView
                        android:id="@+id/assessmentPatientConditions"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_gravity="left|center_horizontal|center_vertical"
                        android:padding="5dp"
                        android:text="-"
                        android:textSize="15sp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="left|center_horizontal|center_vertical"
                        android:background="#CCC"
                        android:padding="5dp"
                        android:text="Medical Procedures"
                        android:textStyle="bold"
                        android:textSize="15sp"/>

                    <TextView
                        android:id="@+id/assessmentMedicalProcedures"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_gravity="left|center_horizontal|center_vertical"
                        android:padding="5dp"
                        android:text="-"
                        android:textSize="15sp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="left|center_horizontal|center_vertical"
                        android:background="#CCC"
                        android:padding="5dp"
                        android:text="Suggested Professional"
                        android:textStyle="bold"
                        android:textSize="15sp"/>

                    <TextView
                        android:id="@+id/assessmentSuggestedProfessional"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_gravity="left|center_horizontal|center_vertical"
                        android:padding="5dp"
                        android:text="-"
                        android:textSize="15sp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="left|center_horizontal|center_vertical"
                        android:background="#CCC"
                        android:padding="5dp"
                        android:text="Remarks / Comments"
                        android:textStyle="bold"
                        android:textSize="15sp"/>

                    <TextView
                        android:id="@+id/assessmentComment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_gravity="left|center_horizontal|center_vertical"
                        android:padding="5dp"
                        android:text="-"
                        android:textSize="15sp"/>

                </LinearLayout>

            </android.support.v7.widget.CardView>




        </RelativeLayout>


    </ScrollView>


</RelativeLayout>